{
  "name": "whispermac",
  "version": "1.0.0",
  "description": "AI-powered dictation for Mac using WhisperLive",
  "author": "Explosion Scratch",
  "main": "dist/main.js",
  "scripts": {
    "fullclean": "rm -rf dist .crush *.log vendor release build && bun install",
    "clear:userdata": "rm -rf \"$HOME/Library/Application Support/WhisperMac\" \"$HOME/Library/Application Support/Electron\" \"$HOME/Library/Application Support/whispermac\" \"$HOME/Library/Application Support/electron\" .whispermac-data",
    "build": "tsc && node scripts/copy-assets.js",
    "start": "electron dist/main.js",
    "dev": "nodemon --exec \"bun run single-dev\" --ignore dist --ignore photon --ignore .crush",
    "single-dev": "concurrently --raw -m 1 \"rm -rf dist\"  \"/Users/tjs/.local/bin/killport 9090\" \"bun run build\" \"bun run start\" --names \"cleanup, kill port, build, dev\"",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never",
    "prep:python-env": "node scripts/prep-python-env.js",
    "prep": "bun run prep:python-env",
    "postinstall": "bun run prep",
    "icons": "node scripts/generate-icons.js",
    "build:mac": "bun run build && bun run icons && bun run prep && electron-builder --mac --publish=never",
    "pack:prod": "NODE_ENV=production bun install && electron-builder --dir"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.4.0",
    "copy-paste": "^2.2.0",
    "keytar": "^7.9.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "sharp": "^0.34.3",
    "@types/copy-paste": "^2.1.0",
    "@types/node": "^24.2.1",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.whispermac.app",
    "productName": "WhisperMac",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "extraResources": [
      {
        "from": "vendor/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "vendor/whisperlive",
        "to": "whisperlive",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dir",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "icon": "build/icons/WhisperMac.icns"
    },
    "win": {},
    "linux": {},
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
