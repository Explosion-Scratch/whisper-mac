{
  "name": "whispermac",
  "version": "1.0.0",
  "description": "AI-powered dictation for Mac using WhisperLive",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "electron dist/main.js",
    "dev": "nodemon --exec \"bun run single-dev\" --ignore dist --ignore .whispermac-data",
    "single-dev": "concurrently --raw -m 1 \"rm -rf dist\"  \"/Users/tjs/.local/bin/killport 9090\" \"bun run build\" \"bun run start\" --names \"cleanup, kill port, build, dev\"",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.4.0",
    "copy-paste": "^2.2.0",
    "electron": "^25.0.0",
    "open": "^10.2.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/copy-paste": "^2.1.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "concurrently": "^8.0.0",
    "electron-builder": "^24.0.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.whispermac.app",
    "productName": "WhisperMac",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "python/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
