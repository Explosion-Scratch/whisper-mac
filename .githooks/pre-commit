#!/bin/bash

fd -u '^\.DS_Store$' -I -tf -X rm

# Pre-commit hook to build and upload release to GitHub
set -e

echo "ğŸš€ Starting pre-commit build and release process..."

# Get current version and commit info
VERSION=$(node -p "require('./package.json').version")
COMMIT_HASH=$(git rev-parse --short HEAD)
BRANCH=$(git rev-parse --abbrev-ref HEAD)
TIMESTAMP=$(date +"%Y%m%d-%H%M%S")

# Create pre-release tag
PRE_RELEASE_TAG="v${VERSION}-${TIMESTAMP}"

echo "ğŸ“¦ Building for version: ${VERSION}"
echo "ğŸ·ï¸  Release tag: ${PRE_RELEASE_TAG}"

# Clean previous builds
echo "ğŸ§¹ Cleaning previous builds..."
rm -rf release/

# Build the app for both architectures
echo "ğŸ”¨ Building macOS app (ARM64 and x64)..."
bun run build:mac

# Check if build was successful
if [ ! -d "release/mac-arm64" ] || [ ! -d "release/mac" ]; then
    echo "âŒ Build failed - release directories not found"
    exit 1
fi

# Create zip files for each architecture in parallel
echo "ğŸ“ Preparing release files..."

ARM64_ZIP="WhisperMac-${VERSION}-arm64.zip"
X64_ZIP="WhisperMac-${VERSION}-x64.zip"

echo "ğŸ—œï¸  Creating zip files in parallel..."

# Create both zip files in parallel using proper zip format
(
    echo "Creating ARM64 zip: $ARM64_ZIP"
    cd release/mac-arm64
    zip -r -q "../../$ARM64_ZIP" WhisperMac.app
) &
ARM64_PID=$!

(
    echo "Creating x64 zip: $X64_ZIP"
    cd release/mac
    zip -r -q "../../$X64_ZIP" WhisperMac.app
) &
X64_PID=$!

# Wait for both to complete
wait $ARM64_PID
wait $X64_PID

echo "âœ… Both archives created successfully"

# Check if GitHub CLI is available
if ! command -v gh &> /dev/null; then
    echo "âŒ GitHub CLI (gh) is not installed. Please install it first:"
    echo "   brew install gh"
    echo "   gh auth login"
    exit 1
fi

# Check if user is authenticated with GitHub
if ! gh auth status &> /dev/null; then
    echo "âŒ Not authenticated with GitHub. Please run:"
    echo "   gh auth login"
    exit 1
fi

# Get repository info
REPO=$(gh repo view --json nameWithOwner -q .nameWithOwner)
echo "ğŸ“¡ Repository: $REPO"

# Create release
echo "ğŸš€ Creating GitHub release..."
RELEASE_NOTES="Release build for commit ${COMMIT_HASH} on branch ${BRANCH}

## Changes
- Automated release build
- Built for macOS (ARM64 and x64)
- Commit: ${COMMIT_HASH}
- Timestamp: ${TIMESTAMP}

## Installation
1. Download the zip file
2. Extract the .app files
3. Move to Applications folder
4. Right-click and select 'Open' (first time only)"

# Create the release with both zip files
gh release create "$PRE_RELEASE_TAG" \
    "$ARM64_ZIP" \
    "$X64_ZIP" \
    --title "WhisperMac ${VERSION} (${COMMIT_HASH})" \
    --notes "$RELEASE_NOTES" \
    --draft=false

echo "âœ… Release created successfully!"
echo "ğŸ”— Release URL: https://github.com/$REPO/releases/tag/$PRE_RELEASE_TAG"
echo "ğŸ“¦ ARM64 zip: $ARM64_ZIP"
echo "ğŸ“¦ x64 zip: $X64_ZIP"

# Clean up zip files
rm -f "$ARM64_ZIP" "$X64_ZIP"

echo "ğŸ‰ Pre-commit hook completed successfully!"
echo "   You can now proceed with your commit."
